---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import WelcomeBackground from "../../components/welcome-background";
import { Button } from "../../components/ui/button";
import { FaGithub } from "react-icons/fa6";
import { FaLinkedinIn } from "react-icons/fa";
import "@fontsource/pathway-gothic-one";
import "@fontsource-variable/eb-garamond";

const pageTitle = "Placeholder";
const allPosts = await getCollection("blog");
---

<Layout>
  <div class="relative h-screen w-full" transition:name="bg-container" transition:animate="none">
    <WelcomeBackground client:load transition:persist="bg" />
    <div class="z-10 absolute inset-0 flex items-center justify-center gap-8 px-8">
      <!-- Hero card — same transition:name as on index, so it morphs from center to left -->
      <div transition:name="hero-card" class="flex flex-col justify-center gap-4 bg-gray-700 p-10 shrink-0">
        <h1 class="text-5xl font-heading">Colm O'Sullivans Blog</h1>
        <Button>
          <FaGithub />
          <p class="text-2xl">Github</p>
        </Button>
        <Button>
          <FaLinkedinIn />
          LinkedIn
        </Button>
        <a href="/blog">
          <Button>
            <p class="text-2xl">Blog</p>
          </Button>
        </a>
      </div>

      <!-- Blog list — slides/fades in -->
      <div transition:name="blog-list" class="max-h-[80vh] overflow-y-auto bg-gray-800/90 p-8">
        <h2 class="text-3xl mb-6 font-heading">{pageTitle}</h2>
        <ul class="flex flex-col gap-4">
          {
            allPosts.map((post) => (
              <li class="bg-gray-700/60 p-4 rounded-md hover:bg-gray-600/60 transition-colors">
                <h3 class="text-xl font-semibold">{post.data.title}</h3>
                <p class="text-gray-300">{post.data.description}</p>
                <a href={`/blog/posts/${post.id}/`} class="text-blue-400 hover:underline">
                  Read more →
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
</Layout>

<style>
  .font-heading {
    font-family: "Pathway Gothic One";
  }
  p {
    font-family: "EB Garamond Variable";
  }
</style>